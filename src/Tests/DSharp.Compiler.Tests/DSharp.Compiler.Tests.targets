<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <CoreLibDirectory>$(ProjectDir)..\..\..\bin\$(Configuration)\</CoreLibDirectory>
  </PropertyGroup>
  
  <ItemGroup>
    <RequiredResources Include="$(CoreLibDirectory)mscorlib.dll;
                                $(CoreLibDirectory)Script.Web.dll" />
  </ItemGroup>
  <Target Name="CopyRequiredResources" AfterTargets="Build">
    <Copy SourceFiles="@(RequiredResources)" DestinationFolder="$(OutputPath)" />
  </Target>

  <Target Name="RemoveCopiedResources" AfterTargets="Clean">
  </Target>

  <Target Name="RebuildCopiedResources" DependsOnTargets="CopyRequiredResources;RemoveCopiedResources" AfterTargets="Rebuild" />
</Project>