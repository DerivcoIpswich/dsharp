<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$(SolutionDir)NuGetCommon.props" Condition="Exists('$(SolutionDir)NuGetCommon.props')" />

  <PropertyGroup>
    <RootNamespace>System</RootNamespace>
    <AssemblyName>DSharp.Mscorlib</AssemblyName>
    <IsPackable>true</IsPackable>
    <NoStdLib>true</NoStdLib>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)DSharp.snk</AssemblyOriginatorKeyFile>
    <DelaySign>false</DelaySign>
    <DisableHandlePackageFileConflicts>true</DisableHandlePackageFileConflicts>
    <AddAdditionalExplicitAssemblyReferences>false</AddAdditionalExplicitAssemblyReferences>
    <AdditionalExplicitAssemblyReferences />
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <TargetFrameworks>net40;net471</TargetFrameworks>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <NuspecFile>DSharp.Mscorlib.nuspec</NuspecFile>
    <Authors>Derivco Ipswich</Authors>
    <Company>Derivco</Company>
    <Description>DSharps Mscorlib implementation which provides all base types</Description>
    <RuntimeMetadataVersion>v4.0.30319</RuntimeMetadataVersion>
    <ScriptName>ss</ScriptName>
    <!--<DSharpCompilerDebugMode>true</DSharpCompilerDebugMode>-->
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;1705;1591;0626</NoWarn>
  </PropertyGroup>
  
  <Target Name="GenerateMetadata" AfterTargets="Build" Condition="'$(TargetFramework)' != ''">
    <Exec Command="..\DSharp.ImportedMetadataGenerator\bin\$(Configuration)\netcoreapp3.1\DSharp.ImportedMetadataGenerator.exe References=@(ReferencePath);@(ReferenceDependencyPaths) AssemblyName=$(ScriptName) OutputPath=$(OutputPath)\$(ScriptName).meta.js Assembly=@(IntermediateAssembly) DebugMode=$(DSharpCompilerDebugMode) ProjectPath=$(MSBuildProjectFullPath)" />
  </Target>
  
</Project>
